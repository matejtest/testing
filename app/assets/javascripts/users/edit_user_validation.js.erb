$(document).ready(function(){

	$("#edit_user_form").validate({
		rules: {
			first_name: {
				required: true
			},
			last_name: {
				required: true
			},
			email: {
				required: true,
				email: true
			},
			role: {
				required: true
			}
		},
		success: function(element){
			element.addClass("valid");
		}
	});
});