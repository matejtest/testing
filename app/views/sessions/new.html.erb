<%= javascript_include_tag "session/login_validation" %>

<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<div class="account-wall">
				<%= form_tag sessions_path(), :method => :post, :id => 'login_form', :class => 'form-signin' do %>
					<%= text_field_tag(:email, params[:email], :class => 'form-control', :placeholder => 'Email', :required => true, :autofocus => true) %>
					<%= text_field_tag(:password, params[:password], :class => 'form-control', :placeholder => 'Password', :required => true, :type => 'password') %>
					<%= button_tag( "Please sign-in", :class => "btn btn-lg btn-primary btn-block" ) %>
				<% end %>
			</div>
		</div>
	</div>
</div>