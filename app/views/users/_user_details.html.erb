
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header details_header">
			<button id="close_modal" type="button" class="close" data-dismiss="modal" data-target="show_expense_modal">
				<span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
			</button>
			<h4 class="modal-title">User details</h4>
		</div>
		<div class="modal-body">
			<p>First Name: <%= user.first_name %></p>
			<p>Last Name: <%= user.last_name %></p>
			<p>Email: <%= user.email %></p>
			<p>Role: <%= user.role.name %></p>
			<p>Joined: <%= user.created_at.strftime("%Y-%m-%d")%></p>
			<br/>
			<%= link_to "#{user.first_name}'s expenses", user_path(user.id) %>
		</div>
	</div>
</div>