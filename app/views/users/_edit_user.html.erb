
<%= javascript_include_tag "users/edit_user_validation" %>


<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header edit_header">
			<button id="close_user_edit_modal" type="button" class="close" data-dismiss="modal" data-target="edit_user_modal">
				<span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
			</button>
			<h4 class="modal-title">Edit user</h4>
		</div>
		<div class="modal-body">
			<%= form_tag user_path(user.id), :method => :put, :remote => true, :id => 'edit_user_form', :style => "width: 500px;" do %>
				<div class="row">
					<div class="col-lg-6 col-md-6">
						<%= text_field_tag(:first_name, user.first_name, :class => 'form-control', :required => true, :placeholder => 'First Name', :autofocus => true, :id => "edit_user_first_name") %>
					</div>
					<div class="col-lg-6 col-md-6">
						<%= text_field_tag(:last_name, user.last_name, :class => 'form-control', :required => true, :placeholder => 'Last Name', :id => 'edit_user_last_name') %>
					</div>
				</div>
				<br/>

				<div class="row">
					<div class="col-lg-6 col-md-6">
						<%= text_field_tag(:email, user.email, :class => 'form-control', :placeholder => 'user@isp.net', :required => true ) %>
					</div>
					<div class="col-lg-6 col-md-6">
						<%= select_tag(:role_id, options_for_select(Role.all.map{|r| [r.name, r.id]}, :selected => @user.role.id ), :class => 'form-control' ) %>
					</div>
				</div>
				<br/>
				<div class="row">
					<div class="col-lg-6 col-md-6 text-center">
						<button id="close_edit_user_modal" type="button" class="btn btn-sm btn-danger" data-dismiss="modal" data-target="edit_user_modal">Cancel</button>
					</div>
					<div class="col-lg-6 col-md-6 text-center">
						<%= button_tag( "Update", :class => "btn btn-sm btn-primary" ) %>
					</div>
				</div>
			<% end %>

		</div>
	</div>
</div>