
<tr id='user_id_<%= "#{@user.id}" %>'>
	<td><%= link_to @user.email, user_path(@user.id) %></td>
	<td><%= @user.first_name %></td>
	<td><%= @user.last_name %></td>
	<td><%= @user.role.name %></td>
	<td>
		<%= link_to "Details", user_details_user_path(@user.id), :method => :get, :remote => true, :class => "btn btn-success" %>
		<%= link_to "Edit", edit_user_path(@user.id), :method => :get, :remote => true, :class => "btn btn-warning" %>
		<%= link_to "Delete", user_path(@user.id), :method => :delete, :remote => true, :class => "btn btn-danger" %>
	</td>
</tr>