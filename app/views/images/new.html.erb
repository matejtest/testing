
<div class="container">
	<h2>please, upload image using paperclip...</h2>

	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
		<%= form_tag images_path(), :method => :post, :id => 'upload_image', :multipart => true, :class => 'form-signin' do %>
			<%= file_field_tag "attachment"  %>
			<%= button_tag( "Upload file", :class => "btn btn-lg btn-primary btn-block" ) %>
			<% end %>
		</div>
	</div>
</div>