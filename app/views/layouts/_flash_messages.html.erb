<% unless flash.empty? %>
<div class="modal-dialog">
	<% flash.each do |name, msg| %>
	<div class="text-center alert alert-<%= name == "notice" ? "success" : "danger" %>">
		<button type="button" class="close" data-dismiss="alert">Ã—</button>
		<% msg = *msg %>
		<% msg.each do |item| %>
		<p><%= item %></p>
		<% end %>
	</div>
	<% end %>
</div>
<% end %>
<script>
	$(".alert").delay(300).addClass("in").fadeOut(5000);
</script>